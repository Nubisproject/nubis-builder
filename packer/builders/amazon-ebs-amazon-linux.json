{
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-ebs-{{user `aws_region`}}-ubuntu",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_ubuntu_ebs_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `project`}} {{user `release`}}.{{user `build`}} ebs ubuntu",
    "ami_description": "{{user `description`}}",
    "ami_regions" : ["eu-west-1", "us-east-1"],
    "tags" : {
       "project": "{{user `project`}}",
       "version": "{{user `release`}}.{{user `build`}}",
       "platform": "ubuntu",
       "parent_source_ami": "{{user `aws_ubuntu_ebs_ami`}}"
    }
  },
  {
    "type": "amazon-ebs",
    "name": "amazon-ebs-{{user `aws_region`}}-amazon-linux",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_amazon_linux_ebs_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `project`}} {{user `release`}}.{{user `build`}} ebs amazon-linux",
    "ami_description": "{{user `description`}}",
    "ami_regions" : ["eu-west-1", "us-east-1"],
    "tags" : {
       "project": "{{user `project`}}",
       "version": "{{user `release`}}.{{user `build`}}",
       "platform": "amazon-linux",
       "parent_source_ami": "{{user `aws_amazon_linux_ebs_ami`}}"
    }
  },
  {
    "type": "amazon-instance",
    "name": "amazon-instance-{{user `aws_region`}}-ubuntu",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "s3_bucket": "{{user `aws_instance_s3_bucket`}}",
    "account_id": "{{user `aws_account_id`}}",
    "x509_cert_path": "{{user `aws_x509_cert_path`}}",
    "x509_key_path": "{{user `aws_x509_key_path`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_ubuntu_instance_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `project`}} {{user `release`}}.{{user `build`}} instance ubuntu",
    "ami_description": "{{user `description`}}",
    "ami_regions" : ["eu-west-1", "us-east-1"],
    "bundle_upload_command": "sudo -i -n ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --location {{.Region}} --retry",
    "tags" : {
       "project": "{{user `project`}}",
       "version": "{{user `release`}}.{{user `build`}}",
       "platform": "ubuntu",
       "parent_source_ami": "{{user `aws_ubuntu_instance_ami`}}"
    }
  },
  {
    "type": "amazon-instance",
    "name": "amazon-instance-{{user `aws_region`}}-amazon-linux",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "s3_bucket": "{{user `aws_instance_s3_bucket`}}",
    "account_id": "{{user `aws_account_id`}}",
    "x509_cert_path": "{{user `aws_x509_cert_path`}}",
    "x509_key_path": "{{user `aws_x509_key_path`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_amazon_linux_instance_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `project`}} {{user `release`}}.{{user `build`}} instance amazon-linux",
    "ami_description": "{{user `description`}}",
    "ami_regions" : ["eu-west-1", "us-east-1"],
    "bundle_vol_command": "sudo -i -n ec2-bundle-vol -k {{.KeyPath}} -u {{.AccountId}} -c {{.CertPath}} -r {{.Architecture}} -e {{.PrivatePath}}/* -d {{.Destination}} -p {{.Prefix}} --batch --no-filter",
    "bundle_upload_command": "sudo -i -n ec2-upload-bundle -b {{.BucketName}} -m {{.ManifestPath}} -a {{.AccessKey}} -s {{.SecretKey}} -d {{.BundleDirectory}} --batch --location {{.Region}} --retry",
    "tags" : {
       "project": "{{user `project`}}",
       "version": "{{user `release`}}.{{user `build`}}",
       "platform": "amazon-linux",
       "parent_source_ami": "{{user `aws_amazon_linux_instance_ami`}}"
    }
  }
  ],
  "provisioners": [
  {
    "type": "file",
    "source": "nubis/nubis-puppet.tar.gz",
    "destination": "/tmp/nubis-puppet.tar.gz"
  },
  {
    "type": "file",
    "source": "nubis/bin/consul-autojoin.sh",
    "destination": "/tmp/autojoin.sh"
  },
  {
    "type": "shell",
    "script": "nubis/bin/packer-bootstrap"
  },
  {
    "type": "puppet-masterless",
    "manifest_dir": "nubis/puppet",
    "manifest_file": "nubis/puppet/init.pp",
    "module_paths": ["nubis/nubis-puppet"],
    "hiera_config_path": "nubis/nubis-puppet/puppet/hiera.yaml",
    "facter": {
      "nubis_release": "{{user `release`}}",
      "nubis_build":   "{{user `build`}}"
    }
  }
  ]
}
